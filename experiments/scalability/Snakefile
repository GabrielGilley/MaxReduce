
NODES = [8, 16, 32, 64]


rule all:
    input:
        expand("results/{name}_{nodes}.csv", name=config["experiment_name"], nodes=NODES)

rule run_scalability_test:
    output:
        "results/{name}_{nodes}.csv"

    params:
        filters=config["filters"]

    shell:
        """
        CONFIG_PATH="config.cfg"
        source "$CONFIG_PATH"
        sbatch -N {wildcards.nodes} pardb.sbatch
        host_out=$(host "$HEAD_NODE".100g)
        IFS=' ' read -r -a array <<< "$host_out"
        IP="${array[@]: -1},0"
        ssh -L8888:localhost:8888 en17        
        "$SIFS_DIR"/pando_python.sif "$IP"
        python3 par-script.py --build-dir "$BUILD_DIR" --filters "{params.filters}" --ip "$CLIENT_ADDRESS" --results-dir "$RESULTS_DIR" --data-dir "$DATA_DIR" --test-name "{wildcards.name}_{wildcards.nodes}" ||
        {
            exit 1
        }        
        """

